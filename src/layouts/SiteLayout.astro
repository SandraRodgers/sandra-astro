---
import Sidebar from "../components/Sidebar.vue";
import Avatar from "../components/Avatar.astro";
import Social from "../components/Social.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>ü¶è</text></svg>"
    />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inknut+Antiqua&family=Karla:wght@600&family=Lato:wght@300&family=Roboto+Mono:wght@300&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <div class="my-8 ml-8"><Avatar /></div>

    <div class="flex">
      <div class="w-2/12 flex flex-col">
        <div class="h-96"><Sidebar client:load /></div>
        <div><Social /></div>
      </div>

      <div class="w-9/12">
        <img class="rhino-image" src="/transparent_rhino.png" />
        <slot />
      </div>
    </div>
  </body>
</html>

<style>
  :root {
    --font-size-base: 1rem;
    --font-size-lg: 1.125rem;
    --font-size-xl: 1.25rem;
    --font-size-2xl: 1.5rem;
    --font-size-3xl: 1.875rem;

    --color-text: hsl(12, 5%, 4%);
    --color-bg: hsl(0, 0%, 100%);
    --font-main: "Lato", sans-serif;
  }

  html {
    font-size: var(--font-size-base);
    color: var(--color-text);
    background-color: var(--color-bg);
    font-family: var(--font-main);
  }

  body {
    margin: 0;
  }
  :global(p, a) {
    font-family: "Lato", sans-serif;
  }
  :global(h1) {
    font-family: "Lato", sans-serif;
    font-size: var(--font-size-3xl);
  }

  :global(h2) {
    font-family: "Karla", sans-serif;
    font-size: var(--font-size-2xl);
  }

  :global(h3) {
    font-family: "Karla", sans-serif;
    font-size: var(--font-size-xl);
  }

  :global(main) {
    /* padding: 1em; */
    max-width: 95%;
    /* margin: auto; */
    @apply mx-16;
  }

  :global(code) {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }

  .rhino-image {
    opacity: 0.1;
    position: absolute;
    top: 0;
    left: 0;
    height: 90%;
    z-index: -1;
    /* filter: drop-shadow(16px 16px 20px #ea7051); */
  }
</style>
